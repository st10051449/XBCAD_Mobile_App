<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/customer_cards"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <!-- Header with Red Background -->
    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customernamecorners"
        android:text="Customer Name Surname"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Mobile Number -->
    <TextView
        android:id="@+id/tvCustomerMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number: 000-000-0000"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Address -->
    <TextView
        android:id="@+id/tvCustomerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: 123 Street, City, Country"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#000000" />

</LinearLayout>
