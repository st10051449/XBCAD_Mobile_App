<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logincar"
    tools:context=".SelectRoleReg">


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="639dp"
        android:background="@drawable/bgseethroughgrey"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619">


        <TextView
            android:id="@+id/login_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/agdasima_bold"
            android:paddingBottom="60dp"
            android:text="Register"
            android:textColor="@android:color/black"
            android:textSize="80sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albert_sans"
            android:paddingBottom="8dp"
            android:text="Select Your Role:"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivAdminRole"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/vector_adminlogo" />

                <TextView
                    android:id="@+id/txtAdminRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:text="I'm An Admin"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivEmployeeLogo"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:src="@drawable/vector_employeelogo" />

                <TextView
                    android:id="@+id/txtemployeelogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:text="I'm An Employee"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivNewBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/vector_business" />

                <TextView
                    android:id="@+id/txtGoToRegBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="I'm A New Business"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
