<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- ImageView to display the selected image -->
    <ImageView
        android:id="@+id/imgVehicle"
        android:layout_width="240dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to remove the selected image -->
    <ImageView
        android:id="@+id/btnRemoveImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_remove"
        android:contentDescription="@string/remove_image_desc"
        app:layout_constraintEnd_toEndOf="@id/imgVehicle"
        app:layout_constraintTop_toTopOf="@id/imgVehicle"
        android:background="@drawable/circle_background"
        android:padding="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>